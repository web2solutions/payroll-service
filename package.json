{
  "name": "deel-task",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "body-parser": "^1.19.0",
    "eslint-config-prettier": "^9.1.0",
    "express": "^4.18.2",
    "prettier": "^3.1.1",
    "sequelize": "^6.23.0",
    "sqlite3": "^5.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "commit": "npm run lint && npm run test && git add . && git-cz",
    "start": "rm database.sqlite3 && npm run seed && nodemon ./src/server.js",
    "seed": "node ./scripts/seedDb.js",
    "test": "rm database.sqlite3 && npm run seed && npx jest --verbose",
    "lint": "eslint --ext .js .",
    "lint:fix": "npm run lint -- --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "commitizen": "^4.3.0",
    "concurrently": "^8.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=10.16.3"
  },
  "engineStrict": true,
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
